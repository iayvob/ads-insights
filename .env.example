# App Configuration
APP_URL=https://your-app-url.com
NODE_ENV=development
APP_NAME=Social Media Manager

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_BUSINESS_CONFIG_ID=your_facebook_business_config_id

# Instagram OAuth Configuration
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Twitter OAuth Configuration
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Amazon OAuth Configuration
AMAZON_CLIENT_ID=your_amazon_client_id
AMAZON_CLIENT_SECRET=your_amazon_client_secret

# Rate Limiting (Optional - defaults exist in code)
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration (for premium subscriptions)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_MONTHLY_PRICE_ID=your_stripe_monthly_price_id
STRIPE_YEARLY_PRICE_ID=your_stripe_yearly_price_id

# SMTP Configuration
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=your_email@example.com